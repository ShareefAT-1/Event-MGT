<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div>
      <h1>{{event.eventName}}</h1>
      <h1>{{event.date}}</h1>
      <h1>{{event.time}}</h1>
      <h1>{{event.place}}</h1>

      <button
        style="padding-left: 5px;"
        onclick="handleRegister(`{{event.eventId}}`)"
      >Register</button>

    </div>

    <script>
      function handleRegister(eventId) {
      window.location.replace(`/registerform/${eventId}`) 
      }
    </script>

  </body>
</html>