<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
        {{#each allEvents}}
        <div style="background-color: bisque; margin: 5px; padding: 10px; border: 0px; border-radius: 10px; padding-left: 10px;">
            <p>Event Name: {{this.eventName}}</p>
            <p>Date: {{this.date}}</p>
            <p>Time: {{this.time}}</p>
            <p>Place: {{this.place}}</p>

            <h1>Registerd Users</h1>
            {{#each this.registeredUsers}}
            <li>{{this.Username}}</li>
            <li>{{this.Mobile}}</li>
            {{/each}}
            
            <button  style="padding-left: 5px;" onclick="handleView(`{{this.eventId}}`)">View</button>
        </div>
        {{/each}}
    </div>

    <script>
        function handleView(eventId) {
            window.location.replace(`/view-event/${eventId}`)
            console.log(eventId)
        }
    </script>

</body>
</html>
